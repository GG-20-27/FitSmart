# FitSmart Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fitsmart

# Server
PORT=5000
NODE_ENV=development

# Session & JWT
SESSION_SECRET=your-session-secret-here-min-32-chars
JWT_SECRET=your-jwt-secret-here-min-32-chars

# WHOOP OAuth
WHOOP_CLIENT_ID=your-whoop-client-id
WHOOP_CLIENT_SECRET=your-whoop-client-secret
WHOOP_REDIRECT_URI=http://localhost:5000/api/whoop/callback

# Admin
ADMIN_WHOOP_ID=your-whoop-user-id

# User Timezone
USER_TZ=Europe/Zurich

# N8N Integration (optional)
N8N_SECRET_TOKEN=your-n8n-secret-token

# OpenAI (for meal analysis - optional)
OPENAI_API_KEY=your-openai-api-key

# Frontend URL
VITE_API_URL=http://localhost:5000

# Production Settings (when deploying)
# NODE_ENV=production
# COOKIE_DOMAIN=yourdomain.com
# SESSION_SECRET=generate-strong-secret-32-chars-minimum
# JWT_SECRET=generate-strong-secret-32-chars-minimum
